{
  "exclude": ["node_modules"],
  "extends": "@acme/tsconfig/nextjs.json",
  "compilerOptions": {
    "outDir": "dist",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@styled-system/*": ["./styled-system/*"],
      "@/*": ["./src/*"],
    }
  },
  "include": ["src", "next-env.d.ts", ".next/types/**/*.ts"]
}
